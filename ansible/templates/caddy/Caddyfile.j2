(cf_dns_https) {
    tls {{ lets_encrypt_email }} {
        dns cloudflare {env.CF_API_TOKEN}
        resolvers 1.1.1.1
    }
  }

{{ media_domain }} {
    import cf_dns_https

    @media path /media/*

	file_server @media {
		hide .git
		precompressed zstd br gzip
	}
}

{{ app_domains | join(' ') }} {
    import cf_dns_https

    @{{ app_name }} path *
    
	reverse_proxy @{{ app_name }} {
		# Reverse proxy everything. Whitenoise will serve static files.
		to unix/{{ runtime_dir }}/gunicorn.sock
	}
}
